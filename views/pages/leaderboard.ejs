<%- include('../partials/header') %>
<%- include('../partials/menu') %>
<div class="container">
	<br>
	<div class="jumbotron">
	  <h1 class="display-4">Leaderboard</h1>
	</div>
	
	<table class="table table-bordered" id="stats_table">
		<tr>
            <th class="align-bottom">Rank</th>
			<th class="align-bottom">Player</th>
			<th class="align-bottom">High Score</th>
		</tr>
		<% for(var i=0; i < playerList.length; i++) { %>
			<tr>
                <td><%= i+1 %>. </td>
				<td><%= playerList[i]["username"] %></td>
				<td><%= playerList[i]["highscore"] %></td>
			</tr>
		<% } %>
	</table>
</div>
